.page {
  padding-bottom: 40rpx;
}

/* 顶部色号信息 */
.header-card {
  margin-top: 24rpx;
}

.color-row {
  display: flex;
  align-items: center;
}

.color-block {
  width: 72rpx;
  height: 72rpx;
  border-radius: 12rpx;
  margin-right: 16rpx;
  background-color: #dddddd;
}

.color-info .color-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.color-sub {
  margin-top: 4rpx;
  font-size: 24rpx;
  color: #999999;
}

/* 库存信息 */
.stock-card {
  margin-top: 8rpx;
}

.stock-main {
  margin-top: 12rpx;
}

.stock-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.stock-label {
  font-size: 26rpx;
  color: #666666;
}

.stock-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.status-tag {
  padding: 2rpx 12rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
}

.status-low {
  background-color: #fff1f0;
  color: #ff4d4f;
}

.status-normal {
  background-color: #f6ffed;
  color: #52c41a;
}

.action-row {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}

.btn {
  flex: 1;
  margin: 0 8rpx;
}

.btn.in {
  background-color: #07c160;
  color: #ffffff;
}

.btn.out {
  background-color: #ff4d4f;
  color: #ffffff;
}

/* 记录列表 */
.record-card {
  margin-top: 8rpx;
}

.log-item {
  margin-top: 16rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #f0f0f0;
}

.log-main {
  display: flex;
  justify-content: space-between;
  margin-bottom: 4rpx;
}

.log-change {
  font-size: 28rpx;
  font-weight: 600;
}

.log-change.plus {
  color: #52c41a;
}

.log-change.minus {
  color: #ff4d4f;
}

.log-reason {
  font-size: 26rpx;
  color: #333333;
}

.log-sub {
  display: flex;
  justify-content: space-between;
}

.log-time {
  font-size: 22rpx;
  color: #bbbbbb;
}

.log-user {
  font-size: 22rpx;
  color: #999999;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal {
  width: 80%;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.modal-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.modal-row {
  margin-bottom: 12rpx;
}

.modal-label {
  display: block;
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 4rpx;
}

.modal-input {
  border-radius: 8rpx;
  background-color: #f5f5f5;
  padding: 10rpx 16rpx;
  font-size: 26rpx;
}

.modal-footer {
  margin-top: 16rpx;
  display: flex;
  justify-content: flex-end;
}

.modal-footer button {
  margin-left: 12rpx;
}