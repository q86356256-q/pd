.page {
  padding: 16rpx 16rpx 40rpx;
  background-color: #f7f8fa;
}

/* 主题作用在根节点，可以根据 themeKey 改背景等 */
.theme-pink {
  background-color: #fff7fb;
}

.theme-blue {
  background-color: #f6fbff;
}

/* 通用卡片样式 */
.card {
  margin-top: 16rpx;
  padding: 16rpx;
  border-radius: 16rpx;
  background-color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
}

