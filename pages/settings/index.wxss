.page {
  padding-bottom: 40rpx;
}

/* 设置项布局 */
.setting-row {
  margin-top: 16rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.setting-label {
  flex: 1;
}

.setting-label text:first-child {
  font-size: 26rpx;
  color: #333333;
}

.setting-label .text-small {
  margin-top: 4rpx;
}

.setting-value {
  display: flex;
  align-items: center;
  min-width: 200rpx;
  justify-content: flex-end;
}

.setting-value text {
  font-size: 24rpx;
  color: #333333;
}

.setting-input {
  width: 200rpx;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 12rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
  font-size: 24rpx;
  text-align: right;
}

.setting-unit {
  margin-left: 8rpx;
  font-size: 22rpx;
  color: #999999;
}

.tips {
  margin-top: 16rpx;
}